<!DOCTYPE html>
<html lang="{{ app.request.locale|default('de') }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}{{ 'app.brand'|trans }}{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="/app.css" rel="stylesheet">
    <script>
      // Expose test front controller base to JS so fetch() can target the right environment
      window.APP_BASE = (function(){
        try {
          var isTest = {{ (app.request.server.get('APP_ENV') == 'test') ? 'true' : 'false' }};
          return isTest ? '/index_test.php' : '';
        } catch(e){ return ''; }
      })();
      // Expose current locale to JS
      window.APP_LOCALE = (function(){
        try { return document.documentElement.getAttribute('lang') || 'de'; } catch(e){ return 'de'; }
      })();
    </script>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">{{ 'app.brand'|trans }}</a>
    {% set isTestEnv = app.request.server.get('APP_ENV') == 'test' %}
    {% if isTestEnv %}
      <span class="badge bg-warning text-dark ms-2">TEST</span>
    {% endif %}
    <div class="d-flex align-items-center gap-2">
      {% if app.user %}
        <a class="btn btn-outline-light" href="{{ path('app_settings') }}">{{ 'app.settings'|trans }}</a>
        <span class="navbar-text me-2">{{ 'app.logged_in_as'|trans({'%user%': app.user.userIdentifier}) }}</span>
        <a class="btn btn-outline-light" href="{{ path('app_logout') }}">{{ 'app.logout'|trans }}</a>
      {% else %}
        <a class="btn btn-outline-light" href="{{ path('app_login') }}">{{ 'app.login'|trans }}</a>
      {% endif %}
    </div>
  </div>
</nav>
<main class="container-fluid py-4 page-main">
    {% block body %}{% endblock %}
</main>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
